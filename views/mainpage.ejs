<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/mainPage.css">
    <script src="https://kit.fontawesome.com/c4254e24a8.js" crossorigin="anonymous"></script>
    <title>Página Principal</title>
    <link rel="shortcut icon" href="/images/mainPage.png">
</head>

<body>
    <header>
        <ul class="navLinks">
            <li><a href="mainpage">Inicio</a></li>
            <li><a href="userprofile">Mi perfil</a></li>
            <li><a href="#">Acerca de</a></li>
            <li><a href="mydatasets">Mis datasets</a></li>
            <li><a href="usermgs">Bandeja</a></li>
        </ul>

        <div class="notification-wrapper">
            <button class="notification-button">Notificaciones</button>
            <ul id="notification-list" class="notification-list">
            </ul>
        </div>

        <a href="/"><button>Cerrar Sesión</button></a>

    </header>

    <h1>
        <p>Dataset</p>Sharing
    </h1>

    <div class="box">
        <a href="newdataset"><button>+ </button></a>
        <form action="/lookfordataset" method="post">
            <i class="fas fa-search"></i>
            <input class="searchBar" type="text" name="lookfor" placeholder="Buscar datasets/usuarios">
            <input type="radio" name="typeofSearch" id="user" value="user"><label for="user">Usuario</label>
            <input type="radio" name="typeofSearch" id="name_description" value="name_description"> <label
                for="name_description">Nombre/Descripción</label>
            <button type="submit">Buscar</button>
        </form>
    </div>

    <script>
        var nots =  <%- (nots) %>;
        var i = 0;
        var notitem = document.getElementById("notification-list");
        console.log(nots);
        while(nots[i] != undefined){
            var li = document.createElement("li");
            li.class = "notification-item";
            li.textContent = nots[i].message;
            notitem.appendChild(li);
            i++;
        }
    </script>
    
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <% if(typeof alert !="undefined" ) { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
        });
        </script>
        <% } %>
</body>

</html>